<?xml version="1.0"?>
<launch>
  <include file="$(find gazebo_ros)/launch/empty_world.launch"/>
  <include file="$(find cym_device)/launch/spawn_cym_device.launch">
    <arg name="name" value="drone1"/>
    <arg name="device_model" value="hector_quadrotor"/>
    <arg name="x" value="1"/>
    <arg name="y" value="1"/>
  </include>
  <include file="$(find cym_device)/launch/spawn_cym_device.launch">
    <arg name="name" value="drone2"/>
    <arg name="device_model" value="hector_quadrotor"/>
    <arg name="x" value="2"/>
    <arg name="y" value="2"/>
  </include>
  <include file="$(find cym_device)/launch/spawn_cym_device.launch">
    <arg name="name" value="drone3"/>
    <arg name="device_model" value="hector_quadrotor"/>
    <arg name="x" value="3"/>
    <arg name="y" value="3"/>
  </include>
  <node name="vrpn_client_node" pkg="cym_device" type="cym_vrpn.py" args="drone1 drone2 drone3"/>
</launch>
